<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE6DC"
    android:fillViewport="true">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode of Payment:"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/transfertypeRG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/cashDP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:tag="cashDP"
                    android:text="Cash Deposit"
                    android:textColor="@color/colorGrayDark" />

                <RadioButton
                    android:id="@+id/chqueRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="chqueRB"
                    android:text="Cheque"
                    android:textColor="@color/colorGrayDark" />

                <RadioButton
                    android:id="@+id/onlineRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="onlineRB"
                    android:text="Online Transfer"
                    android:textColor="@color/colorGrayDark" />

                <RadioButton
                    android:id="@+id/cashPU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="cashPU"
                    android:text="Cash Pickup"
                    android:textColor="@color/colorGrayDark" />

            </RadioGroup>

            <FrameLayout
                android:id="@+id/replace"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>